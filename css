}
/*Card de conteúdo com efeito hover */
.card {
    width: 100%;
    max-width: var(--largura-maxima);
    padding: 30px;
    border-radius: 15px;
    background-color: var(--cor-quadro);
    text-align: center;
    box-shadow: var(--sombra-card);
    border: 2px solid var(--cor-borda);
    transition: all 0.3s ease;
}
/*Efeito ao passar o mouse sobre o card */
.card:hover {
    transform: translateY(-5px); /* move levemente pra cima */
    box-shadow: 12px 12px 30px rgba(0, 0, 0, 0.3);
    border-color: #515be7;
}
/*Botão padrão com animação */
.botao {
