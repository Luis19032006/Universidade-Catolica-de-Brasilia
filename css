/*Variáveis globais para facilitar personalização */
:root {
    --cor-fundo: cadetblue;                         /* Cor de fundo da página */
    --cor-quadro: beige;                            /* Cor dos quadros e seções principais */
    --cor-texto: black;                             /* Cor padrão dos textos */
    --cor-hover-texto: rgb(253, 253, 255);          /* Cor dos links ao passar o mouse */
    --cor-hover-botao: cornflowerblue;              /* Cor de fundo dos botões ao passar o mouse */
    --cor-rodape: darkslategrey;                    /* Cor de fundo do rodapé */
    --cor-borda: black;                             /* Cor das bordas */
    --cor-tabela-cabecalho: lightgray;              /* Cor do cabeçalho das tabelas */
    --sombra-card: 9px 8px 30px rgba(0, 0, 0, 0.2);  /* Sombra suave dos cards */
    --fonte-principal: Arial, Helvetica, sans-serif;/* Fonte principal do site */
    --largura-maxima: 600px;                        /* Largura máxima do conteúdo principal */
    --sombra-box: 4px 4px 10px rgba(0, 0, 0, 0.4);   /* Sombra das caixas principais */
    --fonte-destaque: "Georgia", serif;             /* Fonte alternativa para títulos */
    --gradiente-botao: linear-gradient(135deg, #72b0f7); /* Gradiente usado em botões */
}
/*Reset básico e centralização */
body {
    background-color: var(--cor-fundo);
    font-family: var(--fonte-principal);
    margin: 0;
    padding: 40px 0; /* espaço em cima e embaixo */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* ou center se quiser centralizar tudo */
}
/*Seção de perfil com imagem e nome */
.perfil {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-bottom: 20px;
}
/*Estilo da imagem do perfil */
.perfil-img {
    width: 150px;
    height: 150px;
    transition: transform 0.3s ease;
    box-shadow: 0.3s ease;
}
/*Efeito ao passar o mouse na imagem */
.perfil-img:hover {
    scale: 1.10; /* aumenta levemente */
    transition: transform 0.3s ease;
}
/* Nome abaixo da imagem */
.perfil-nome {
    margin-top: 5px;
    font-size: 1.5em;
    font-weight: bold;
}
/*Tabela de informações */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
}
/*Células da tabela */
th, td {
    border: 1px solid var(--cor-borda);
    padding: 8px;
    text-align: center;
}
/*Cabeçalho da tabela */
th {
    background-color: var(--cor-tabela-cabecalho);
}
/*Estilo para links */
a {
    color: var(--cor-texto);
    text-decoration: none;
}
/*Efeito hover nos links */
a:hover {
    color: var(--cor-hover-texto);
}
/*Menu de navegação */
nav {
    margin-top: 20px;
}
nav ul {
    list-style: none;
    padding: 0;
}
/*Navegação horizontal */
nav ul li {
    display: inline;
