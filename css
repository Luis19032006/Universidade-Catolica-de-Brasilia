    cursor: pointer;
    font-size: 16px;
    font-family: var(--fonte-principal);
    transition: background-color 0.3s ease, transform 0.3s ease;
}
/*Efeito ao passar o mouse no botão */
.botao:hover {
    transform: scale(1.05);
    background: linear-gradient(145deg, #000000, #3e86c2);
}

