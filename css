    border-radius: 5px;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}
/* Hover nos botões do menu */
nav a:hover {
    background-color: var(--cor-hover-botao);
}
/*Rodapé da página */
footer {
